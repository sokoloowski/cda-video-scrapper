{
    "manifest_version": 2,

    "name": "CDA video scrapper",
    "description": "A simple video-scraping extension for Chrome",
    "version": "1.0",
    "author": "@sokoloowski",

    "background": {
        "scripts": ["src/js/popup.js"],
        "persistent": true
    },

    "permissions": ["tabs", "https://www.cda.pl/video/*"],
    "browser_action": {
        "default_icon": "src/assets/logo.png",
        "default_popup": "src/popup.html"
    }
}
